/* component/confirm.wxss */
@import "/pages/common/lib/xxui.wxss";

/* ======================对话框============================= */
.back-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.back-mask .dialog-panel{
  margin: 0 auto;
  margin-top: 50%;
  height: 250rpx;
  width: 500rpx;
  /* border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx; */
  position: relative;
}

.back-mask .dialog-panel .panel-title-wrp{
  height: 250rpx;
  padding-top: 20rpx;
}
.back-mask .dialog-panel .panel-title-wrp image{
  display: block;
  height: 200rpx;
  width: 200rpx;
  margin: 0 auto;
}
.back-mask .dialog-panel .panel-title-wrp .panel-title{
  font-size: 40rpx;
  text-align: center;
}
.dialog-panel .panel-content{
  font-size: 30rpx;
  text-align: center;
  margin-top: 10rpx;
}

.dialog-panel .button-wrp{
  width: 400rpx;
  position: absolute;
  bottom: 0;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}
.dialog-panel .button-wrp .button-left{
  width: 60%;
  height: 100%;
  margin: 0 auto;
  color: #FFFFFF;
  /* border-bottom-left-radius: 15rpx; */
}
.dialog-panel .button-wrp .button-right{
  width: 60%;
  height: 100%;
  margin: 0 auto;
  font-size: 26rpx;
}
.dialog-panel .button-wrp .button-one{
  width: 60%;
  height: 100%;
  margin: 0 auto;
  color: #FFFFFF;
  margin-bottom: 50rpx;
  
  /* border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx; */
}
