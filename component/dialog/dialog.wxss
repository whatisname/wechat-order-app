@import "/pages/common/lib/xxui.wxss";

/* ======================对话框============================= */
.back-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.1);
}
.back-mask .dialog-panel{
  margin: 0 auto;
  margin-top: 50%;
  height: 250rpx;
  width: 500rpx;
  position: relative;
}

.back-mask .dialog-panel .panel-title-wrp{
  height: 100rpx;
  padding-top: 20rpx;
}

.back-mask .dialog-panel .panel-title-wrp image{
  display: block;
  height: 100rpx;
  width: 100rpx;
  margin-left: 60rpx;
  margin-top: 30rpx;
}
.back-mask .dialog-panel .panel-title-wrp .text-wrp{
  margin-left: 70rpx;
}
.back-mask .dialog-panel .panel-title-wrp .text-wrp .panel-title{
  font-size: 35rpx;
  margin-top: 40rpx;
}
.back-mask .dialog-panel .panel-title-wrp .text-wrp .panel-content{
  font-size: 25rpx;
  margin-top: 10rpx;
}

.dialog-panel .button-wrp{
  height: 70rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
}
.dialog-panel .button-wrp .button-left{
  width: 50%;
  height: 100%;
  margin: 0 auto;
}
.dialog-panel .button-wrp .button-right{
  width: 50%;
  height: 100%;
  margin: 0 auto;
  font-size: 26rpx;
  color: #FFFFFF;
}
