/* pages/address/address.wxss */
@import "/pages/common/lib/xxui.wxss";

/* ======================list============================= */
.list{
  width: 100%;
}
.list .list-background-title{
  font-size: 30rpx;
  line-height: 30rpx;
  padding-left: 40rpx;
  padding-top: 25rpx;
}
.list .list-background-title image{
  width: 50rpx;
  height: 50rpx;
}

.list .list-item{
  margin: 0 20rpx;
  margin-top: 20rpx;
  background: #FFFFFF;
}
.selected-border{
  border: 5rpx solid #3CB963;
}
.default-border{
  border: 5rpx solid #FFFFFF;
}

.list .list-item .dish-detail{
 margin-left: 15rpx;
}
.list .list-item .dish-detail .dish-title{
  font-size: 30rpx;
}
.list .list-item .dish-detail .dish-title .default-lable{
  background: #3CB963;
  color: #FFFFFF;

}
.list .list-item .dish-price{
  margin-top: 10rpx; 
  margin-left: 15rpx;
  font-size: 30rpx;
}
.list .list-item .dish-price .price-tag{
  color: #ffb901;
}
.list .list-item .dish-price .star{
  margin-left: 15rpx;
  font-size: 20rpx;
}
.list .list-item .dish-price .number{
  margin-left: 15rpx;
}
.list .list-item .dish-description{
  font-size: 25rpx;
  margin-left: 5rpx;
  display: block;
  color: rgba(0, 0, 0, 0.6);
}

.list .list-item .left-section{}
.list .list-item .left-section .edit-button{
  width: 100%;
  height: 70rpx;
  border-bottom-left-radius: 100rpx;
}
.list .list-item .left-section .edit-button image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 20rpx; 
}

/* ======================底部栏======================= */
.bottom-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 85rpx;
  font-size: 30rpx;
  line-height: 85rpx;
  text-align: center;
  background: #3CB963;
  color: #FFFFFF;
}

