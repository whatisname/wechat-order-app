/**index.wxss**/


/* ----- */

.top-bar {
  width: 100%;
  background-color: #ffb901;
  flex-direction:row;
}

.top-bar .left, .top-bar .qrcode {
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
}

.top-bar .search {
  width: 80%;
}

.top-bar .search .search-button {
  background-color: rgba(0, 0, 0, 0.1);
  width: 60%;
  border-radius: 50rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  padding: 10rpx 0;
}

.top-bar .search .search-button .search-text {
  text-align: center;
  color: #FFFFFF;
}

.top-bar .left .search-icon, .top-bar .qrcode .QR-icon {
  width: 50rpx;
  height: 50rpx;
} 

/* -----------advertisements------------- */

.adv{
  width: 100%;
  /* height: 360rpx; */
}

.adv .adv-item{
  background-color: #FFFFFF;
  width: 100%; 
  height: 100%;
}
.adv .adv-item .adv-img{
  width: 100%; 
  height: 100%;
}

/* -----------category------------- */
.category{
  width: 100%;
  height: 420rpx;
  background-color: #FFFFFF;
  margin-top:15rpx;
}

.category .category-wraper{
  height: 150rpx;
  width: 150rpx;
  background: #f3f3f3;
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx; 
  margin-bottom: 25rpx;
  border-radius: 100rpx;
}

.category .category-wraper .category-image{
  height: 130rpx;
  width: 130rpx;
  margin-top: 11rpx;
  margin-left: 11rpx;
  border-radius: 100rpx;
}
.category .category-wraper  .category-name{
  font-size: 20rpx;
  text-align: center;
  margin-top: 10rpx;
}



/* -----------list------------- */
.list{
  width: 100%;
  background-color: #FFFFFF;
  margin-top:15rpx;
}
.list .list-title{
  font-size: 30rpx;
  padding: 10rpx;
  background-color: #ffb901;
  color: #FFFFFF;
  text-align: center;
}
.list .list-item{
  margin: 10rpx 20rpx;
  padding-bottom: 40rpx;
}
.list .list-item .dish{
  margin-right: 10rpx;
}
.list .list-item .store-detail{
 margin-left: 15rpx;
 margin-top: 10rpx;
}
.list .list-item .store-detail .store-title{
  font-size: 30rpx;
}

.list .list-item .store-description{
  font-size: 25rpx;
  margin-left: 5rpx;
}

.list .list-item .store-status{
  font-size: 25rpx;
  display: block;
  width: 90rpx;
  text-align: center;
  padding: 2rpx 5rpx;
  margin-top: 10rpx;
  border-radius: 5rpx;
}

.list .list-item .store-status.inactive{
  background-color: rgba(0, 0, 0, 0.1);
}

.list .list-item .store-status.active{
  background-color: rgba(255, 185, 1, 1);
  color: #FFFFFF;
}
